extends layout

block content
    section.list
      .container
        section.title
          h1.title Let's Do This! 
          h2.subtitle Consistent action. One step at a time completes an entire journey
        section.content
          section.new-task
            input.input(type='text', placeholder='What are you doing today?')
            button Get 'er done!
          section.task-list
            div.task
              p.edit <i class="fas fa-edit"></i>
              p.task-title This is a sample task
              .urgeny <i class="fas fa-flag"></i> Not Urgent
              p.check <i class="far fa-check-square"></i>
              p.delete <i class="fas fa-trash"></i>
