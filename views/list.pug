extends layout

block content
    section.list
      .top
        section.title
          h1.title Let's Do This! 
          h2.subtitle Consistent action. One step at a time completes an entire journey
      .container
        section.content
          section.new-task
            h4 New Task
            form(action='/insert', method='post')
              input.input(type='text', name='task', placeholder='What are you doing today?')
              button(class='button', type='submit') Get 'er done!
          section.task-list
            ol
              each task, result in tasks
                li
                  .task
                    p.edit <i class="fas fa-edit"></i>
                    p.task-title task.name
                    .urgeny <i class="fas fa-flag"></i> Not Urgent
                    p.check <i class="far fa-check-square"></i>
                    p.delete <i class="fas fa-trash"></i>
              
